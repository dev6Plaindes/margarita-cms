{% extends "home/stetic/main.twig" %}

{% block css %}

{% endblock %}

{% block content %}

<section class="inner-banner">
    <div class="container">
        <ul class="list-unstyled thm-breadcrumb">
            <li><a href="#">Inicio</a></li>
            <li class="active"><a href="#">Cursos</a></li>
        </ul><!-- /.list-unstyled -->
        <h2 class="inner-banner__title">Cursos</h2><!-- /.inner-banner__title -->
    </div><!-- /.container -->
    <p class="sub-tittle-ml">Especializate con nosotros</p>
</section><!-- /.inner-banner -->
<section class="course-one course-page">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="become-teacher__title">Especialidades</h2>
            </div>
            <div class="course-one__carousel owl-carousel owl-theme">
                {% for i in 0..10 %}
                <div class="item">
                    <div class="course-one__single color-1">
                        <div class="course-one__image">
                            <img src="/assets/template/stetic/images/course-1-1.jpg" alt="">
                            <i class="far fa-heart"></i><!-- /.far fa-heart -->
                        </div><!-- /.course-one__image -->
                        <div class="course-one__content">
                            <a class="course-one__category">development</a><!-- /.course-one__category -->
                            <div class="course-one__admin">
                                <img src="/assets/template/stetic/images/team-1-1.jpg" alt="">
                                por <a >Lou Guerrero</a>
                            </div><!-- /.course-one__admin -->
                            <h2 class="course-one__title"><a href="/curso/item">New react bootcamp {{ i }}</a></h2>
                            <!-- /.course-one__title -->
                            <div class="course-one__stars">
                                <span class="course-one__stars-wrap">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </span><!-- /.course-one__stars-wrap -->
                                <span class="course-one__count">4.8</span><!-- /.course-one__count -->
                                <span class="course-one__stars-count">250</span><!-- /.course-one__stars-count -->
                            </div><!-- /.course-one__stars -->
                            <div class="course-one__meta">
                                <a href="/curso/item"><i class="far fa-clock"></i> 10 Horas</a>
                                <a href="/curso/item"><i class="far fa-folder-open"></i> 6 Lecturas</a>
                                <a href="/curso/item">$18</a>
                            </div><!-- /.course-one__meta -->
                            <a href="/curso/item" class="course-one__link">Ver vista previa</a><!-- /.course-one__link -->
                        </div><!-- /.course-one__content -->
                    </div><!-- /.course-one__single -->
                </div><!-- /.item -->
                {% endfor %}
                
                
            </div><!-- /.course-one__carousel -->    
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.course-one course-page -->

{% endblock %}

{% block js %}{% endblock %}