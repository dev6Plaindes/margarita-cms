{% extends "home/stetic/main.twig" %}

{% block css %}

{% endblock %}

{% block content %}

<section class="inner-banner" style="background-image: url({{ menu.image|raw }});background-repeat: no-repeat;
background-size: cover;">
    <div class="container">
        <ul class="list-unstyled thm-breadcrumb">
            <li><a href="#">Inicio</a></li>
            <li class="active"><a href="#">Contacto</a></li>
        </ul><!-- /.list-unstyled -->
        <h2 class="inner-banner__title">Contacto</h2><!-- /.inner-banner__title -->
    </div><!-- /.container -->
</section><!-- /.inner-banner -->
<section class="contact-info-one">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="contact-info-one__single wow fadeInDown" data-wow-duration="1500ms">
                    <div class="contact-info-one__icon"><i class="kipso-icon-manager"></i><!-- /.kipso-icon-manager -->
                    </div><!-- /.contact-info-one__icon -->
                    <h2 class="contact-info-one__title">Nosotros </h2><!-- /.contact-info-one__title -->
                    <p class="contact-info-one__text">{{ _company.description|raw }}</p><!-- /.contact-info-one__text -->
                </div><!-- /.contact-info-one__single -->
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <div class="contact-info-one__single wow fadeInUp" data-wow-duration="1500ms">
                    <div class="contact-info-one__icon"><i class="kipso-icon-placeholder"></i>
                        <!-- /.kipso-icon-manager -->
                    </div><!-- /.contact-info-one__icon -->
                    <h2 class="contact-info-one__title">Dirección</h2><!-- /.contact-info-one__title -->
                    <p class="contact-info-one__text">{{ _company.address|raw }}</p><!-- /.contact-info-one__text -->
                </div><!-- /.contact-info-one__single -->
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <div class="contact-info-one__single wow fadeInDown" data-wow-duration="1500ms">
                    <div class="contact-info-one__icon"><i class="kipso-icon-contact"></i><!-- /.kipso-icon-manager -->
                    </div><!-- /.contact-info-one__icon -->
                    <h2 class="contact-info-one__title">Información de contacto</h2><!-- /.contact-info-one__title -->
                    <p class="contact-info-one__text">{{ _company.email_contact|raw }} <br>
                        {{ _company.phone_contact|raw }} </p><!-- /.contact-info-one__text -->
                </div><!-- /.contact-info-one__single -->
            </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.contact-info-one -->
<section class="contact-one">
    <div class="container">
        <h2 class="contact-one__title text-center">Ponte en contacto
            con nosotros</h2><!-- /.contact-one__title -->
        <form class="contact-one__form" id="frmMessage">
            <div class="row low-gutters">
                <div class="col-lg-12">
                    <input type="text" name="name" placeholder="Su nombre">
                </div><!-- /.col-lg-6 -->
                <div class="col-lg-6">
                    <input type="text" placeholder="Correo electrónico" name="email">
                </div><!-- /.col-lg-6 -->
                <div class="col-lg-6">
                    <input type="text" placeholder="teléfono" name="telephone">
                </div><!-- /.col-lg-6 -->
                <div class="col-lg-12">
                    <textarea placeholder="Escriba su mensaje" name="description"></textarea>
                    <div class="text-center">
                        <button type="submit" class="contact-one__btn thm-btn">Envíar mensaje</button>
                    </div><!-- /.text-center -->
                </div><!-- /.col-lg-12 -->
            </div><!-- /.row -->
        </form><!-- /.contact-one__form -->
        <div class="result text-center"></div><!-- /.result -->
    </div><!-- /.container -->
</section><!-- /.contact-one -->


