<section class="row mb-4 border-bottom">
    {% for key, content in section.contents %}
        {% if content.imagens|length %}
        <div class="col-lg-3 mb-4 mx-auto text-center">            
            <img src="{{ content.imagens[0].patch }}" height="250px">
        </div>
        {% endif %}
        {% if content.imagens|length %}
        <div class="col-lg-9 mb-4">
        {% else %}
        <div class="col-lg-12 mb-4">
        {% endif %}
            <h4 class="font-weight-bold">{{ content.content_name }}</h4>
            <p>{{ content.content_description }}</p>
            <p>{{ content.content_caption }} 
                <a href="{{ content.content_url }}" target="_blank">
                    <img src="/assets/template/comunidad/images/spotify.png" height="30px">
                </a>
            </p>
        </div>
    {% endfor %}
</section>