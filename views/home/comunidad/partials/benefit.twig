<section class="row mb-3">
    <div class="col-lg-12">
        <h4 class="title mb-3">{{ section.name }}</h4>
    </div>
    <div class="col-lg-12">
        <div class="row justify-content-md-center">
            {% for key, content in section.contents %}
            <div class="col-lg-3 {{ key % 3 == 0 ?  'offset-lg-1' : '' }} float-left mb-4 p-1">
                <div class="card system-card-3">
                {% if content.imagens|length %}
                    <div class="card-image-top">
                        <img src="{{ content.imagens[0].patch }}" width="100%">
                    </div>
                {% endif %}                
                    <div class="card-body">
                        <p>{{ content.content_name|raw }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>