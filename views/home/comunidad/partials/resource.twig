        <div id="{{ section.uniqid }}" class="owl-carousel owl-theme">
        {% for key, content in section.contents %}
            <div class="my-2">
                <div class="card system-card-2">
                    {% if content.imagens|length %}
                    <div class="card-image-top">
                        <a href="{{ content.content_url }}" target="_blank">
                            <img src="{{ content.imagens[0].patch }}" width="100%">
                        </a>
                    </div>
                    {% endif %}
                    <div class="card-body">
                        <div class="vertical-center">
                            <p>{{ content.content_name|raw }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
