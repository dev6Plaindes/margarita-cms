<div class="col-lg-11 system-card-chapter">
    <div class="card-body">
        <p class="card-title">
            <img src="/assets/template/comunidadpro/images/img1561.jpg" height="40"/> PODCAST | {{ Portafolio.name }}
        </p>
        <p class="card-description">
        {{ Portafolio.overview|raw }}
        </p>
        <p class="card-caption">
            Lo puedes escuchar antes si eres asocia/o de PRO 360.
        </p>
        <div class="card system-card-chapter-item">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-2">
                        <img src="{{ Portafolio.teacher.image }}" height="100" width="100%" />
                    </div>
                    <div class="col-lg-3 my-auto">
                        <p class="info-title">{{ Portafolio.name }}</p>
                        <p class="info-caption">Con {{ Portafolio.teacher.name }} {{ Portafolio.teacher.lastname }}</p>
                    </div>
                    <div class="col-lg-7 d-flex my-auto">
                        <div class="player">
                            <div class="playarea">
                                <div class="play"></div>
                                <div class="pause"></div>
                            </div>
                        </div>
                        <div class="player-info my-auto">
                            <p class="mb-0">
                                {{ Portafolio.name }}
                            </p>
                            <p>
                                00:00/15:00
                            </p>
                        </div>
                        <audio controls="" id="audio-0987654321" style="display:none;">
                            <source src="{{ Portafolio.image }}">
                            Your browser does not support the audio tag.
                        </audio>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-line"></div>
        <div class="row card-time">
            <div class="col-md-4 mb-1">
                {{ Portafolio.created_at }}
            </div>
            <div class="col-md-4 mb-1">
                Actualizado el {{ Portafolio.updated_at }}
            </div>
        </div>
    </div>
</div>