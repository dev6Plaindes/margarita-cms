                                    * {box-sizing: border-box}

                                    /* Style the tab */
                                    .tab {
                                    float: left;
                                    border: 1px solid #fff;
                                    background-color: #f1f1f1;
                                    width: 30%;
                                    height: 100%;
                                    }

                                    /* Style the buttons that are used to open the tab content */
                                    .tab button {
                                    display: block;
                                    background-color: inherit;
                                    color: black;
                                    padding: 22px 16px;
                                    width: 100%;
                                    border: none;
                                    outline: none;
                                    text-align: left;
                                    cursor: pointer;
                                    transition: 0.3s;
                                    -webkit-border-radius: 3px;
                                    font-size: 1rem;
                                    font-weight: 700;
                                    }

                                    /* Change background color of buttons on hover */
                                    .tab button:hover {
                                    background-color: #ddd;
                                    }

                                    /* Create an active/current "tab button" class */
                                    .tab button.active {
                                    background-color: #ccc;
                                    }

                                    /* Style the tab content */
                                    .tabcontent {
                                    float: left;
                                    padding: 0px 12px;
                                    border: none;
                                    width: 70%;
                                    border-left: none;
                                    height: 300px;
                                    }
                                </style>


