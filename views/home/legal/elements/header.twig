<header>
    <nav class="navbar navbar-expand-lg navbar-toggleable-sm backg-one">
        <a class="navbar-brand min-nav" href="#">
            <img src="/assets/template/legal/images/logo.jpg" class="d-inline-block align-top" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <i class="bi bi-list"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

            <div class="row text-center  w-100">
                <div class="menu-item-1 navbar-nav d-flex justify-content-around text-center col">
                    <!--a class="nav-item nav-link" href="./nosotros">Historia</a>
                    <a class="nav-item nav-link" href="./areas">√Åreas</a>
                    <a class="nav-item nav-link" href="./equipo">Directorio</a-->

                    {% for  index, menu_item in _menu %}
                         {% if index <= 2 %}        
                             <a class="nav-item nav-link " href="{{ menu_item.url ? menu_item.url : '/' ~ menu_item.slug }}" > {{ menu_item.name }} </a> 
                         {% endif %}
                    {% endfor %}
                    
                </div>
                <div class="menu-item-2 col-2">
                    {% for  index, menu_item in _menu %}
                         {% if index == 3 %}  
                            <a class="navbar-brand max-nav" href="/{{ menu_item.slug }}">
                                <img src="{{ _company.logos[0].patch }}" class="d-inline-block align-top" alt="">
                            </a>

                         {% endif %}
                    {% endfor %}
                </div>
                <div class="menu-item-3 navbar-nav d-flex justify-content-around text-center col">

                     {% for  index, menu_item in _menu %}
                         {% if index > 3 %}        
                             <a class="nav-item nav-link " {{ menu_item.url ? 'target="_blank"': ''}} href="{{ menu_item.url ? menu_item.url : '/' ~ menu_item.slug }}" > {{ menu_item.name }} </a> 
                         {% endif %}
                    {% endfor %}

                    <!--a class="nav-item nav-link" href="./clientes">Clientes</a>
                    <a class="nav-item nav-link" href="#">Legalis</a>
                    <a class="nav-item nav-link" href="./contacto">Contacto</a-->
                </div>
            </div>
        </div>
    </nav>
</header>