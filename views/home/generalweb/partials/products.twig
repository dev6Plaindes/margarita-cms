<div class="col-lg-12 mb-4">  
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        {% for index_content, item_content in section.contents %}
            <li class="nav-item" role="presentation">
                <button class="nav-link {{ index_content == 0 ? 'active' : '' }}" id="navtabs-{{item_content.uniqid}}-tab" data-bs-toggle="tab" data-bs-target="#navtabs-{{item_content.uniqid}}" type="button" role="tab" aria-controls="navtabs-{{item_content.uniqid}}" aria-selected="true">{{ item_content.title }}</button>
            </li>
        {% endfor %}
    </ul>
    <div class="tab-content" id="myTabContent">
        {% for index_content, item_content in section.contents %}
            <div class="tab-pane fade {{ index_content == 0 ? 'show active' : '' }}" id="navtabs-{{item_content.uniqid}}" role="tabpanel" aria-labelledby="navtabs-{{item_content.uniqid}}-tab">
                <div class="row mt-3">
                    <div class="col-lg-12 d-flex">
                        {# <h4 class="title mb-3">{{ item_content.title }}</h4> #}
                        <div id="loading-{{ item_content.uniqid }}">
                            <div class="spinner-border text-info ml-3" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div> Cargando...
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div id="carousel-{{ item_content.uniqid }}" class="owl-carousel owl-theme">
                        </div> 
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>