                        <a style="border: none;" class="nav-link {{ menu.slug == menu_item.slug ? 'active' : '' }} pt-3" aria-current="page" href="{{ menu_item.url ? menu_item.url : "/" ~ menu_item.slug }}" {{ menu_item.url ? 'target="_blank"'}}">
