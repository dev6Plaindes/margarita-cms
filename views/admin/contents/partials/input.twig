{% if type == _TEXT_TYPE %}
<input
  class="form-control form-control-lg form-control-solid"
  type="text"
  name="{{ name }}"
  value="{{ value }}"
  required
/>
{% elseif type == _SUMMERNOTE_TYPE %}
<div class="input-group input-group-lg input-group-solid">
  <textarea class="form-group-solid summernote" name="{{ name }}">{{
    value
  }}</textarea>
</div>
{% elseif type == _NUMBER_TYPE %}
<input
  class="form-control form-control-lg form-control-solid"
  type="number"
  name="{{ name }}"
  value="{{ value }}"
  step="0.01"
  min="0"
/>
{% elseif type == _CHECKBOX_TYPE %}
<div class="checkbox-inline mt-3">
  <label class="checkbox">
    <input type="checkbox" name="{{ name }}" value="1"
    {{ value == 1 ? "checked" : "" }}/>
    <span></span>
    Activar
  </label>
</div>
{% elseif type == _TEXT_NAME_TYPE %}
<input
  class="form-control form-control-lg form-control-solid"
  type="text"
  name="{{ name }}"
  value="{{ value }}"
  placeholder="Ingrese el tipo"
/>
{% else %} {% endif %}
