<form class="form" @submit="onFormData">
  <input type="hidden" name="id" value="{{ content.id }}" />
  <div class="row justify-content-center">
    <div class="col-xl-9">
      {% if content.content_id == 0 %}
      <div class="form-group row">
        <label class="col-xl-3 col-lg-3 col-form-label">Acciones</label>
        <div class="col-lg-9 col-xl-9">
          <div class="checkbox-inline mt-3">
            <label class="checkbox">
              <input type="checkbox" name="status" value="1"
              {{ content.status == 1 ? "checked" : "" }}/>
              <span></span>
              Activar
            </label>
          </div>
        </div>
      </div>
      {% endif %} {% if settings.name %}
      <div class="form-group row">
        <label class="col-xl-3 col-lg-3 col-form-label">
          {% if settings.name.label %}
          {{ settings.name.label }}
          {% else %} Nombre {% endif %}
        </label>
        <div class="col-lg-9 col-xl-9">
          {% include 'admin/contents/partials/input.twig' with { 'type':
          settings.name.type, 'name': 'name', 'value': content.name} %}
        </div>
      </div>
      {% endif %} {% if settings.caption %}
      <div class="form-group row">
        <label class="col-xl-3 col-lg-3 col-form-label">
          {% if settings.caption.label %}
          {{ settings.caption.label }}
          {% else %} Caption {% endif %}
        </label>
        <div class="col-lg-9 col-xl-9">
          {% include 'admin/contents/partials/input.twig' with { 'type':
          settings.caption.type, 'name': 'caption', 'value': content.caption} %}
        </div>
      </div>
      {% endif %} {% if content.content_id == 0 %}
      <div class="form-group row">
        <label class="col-xl-3 col-lg-3 col-form-label">Sección</label>
        <div class="col-lg-9 col-xl-9">
          <select
            class="form-control selectpicker mb-5"
            title="Seleccionar"
            name="sections[]"
            multiple="multiple"
            required
          >
            {% for item in data.sections %}
            <option value="{{ item.id }}">{{ item.name }}</option>
            {% endfor %} {#
            <option
              v-for="(item, index) in sections"
              :key="item.id"
              :value="item.id"
              v-text="item.name"
            ></option>
            #}
          </select>
        </div>
      </div>
      {% endif %} {% if settings.description %}
      <div class="form-group row">
        <label class="col-xl-3 col-lg-3 col-form-label">
          {% if settings.description.label %}
          {{ settings.description.label }}
          {% else %} Descripción {% endif %}
        </label>
        <div class="col-lg-9 col-xl-9">
          {% include 'admin/contents/partials/input.twig' with { 'type':
          settings.description.type, 'name': 'description', 'value':
          content.description} %}
        </div>
      </div>
      {% endif %} {% if settings.price %}
      <div class="form-group row">
        <label class="col-xl-3 col-lg-3 col-form-label">
          {% if settings.price.label %}
          {{ settings.price.label }}
          {% else %} Precio {% endif %}
        </label>
        <div class="col-lg-9 col-xl-9">
          {% include 'admin/contents/partials/input.twig' with { 'type':
          settings.price.type, 'name': 'price', 'value': content.price} %}
        </div>
      </div>
      {% endif %} {% if settings.boolean %}
      <div class="form-group row">
        <label class="col-xl-3 col-lg-3 col-form-label">
          {% if settings.boolean.label %}
          {{ settings.boolean.label }}
          {% else %} Estado {% endif %}
        </label>
        <div class="col-lg-9 col-xl-9">
          {% include 'admin/contents/partials/input.twig' with { 'type':
          settings.boolean.type, 'name': 'boolean', 'value': content.boolean} %}
        </div>
      </div>
      {% endif %} {% if settings.type_name %}
      <div class="form-group row">
        <label class="col-xl-3 col-lg-3 col-form-label">
          {% if settings.type_name.label %}
          {{ settings.type_name.label }}
          {% else %} Tipo {% endif %}
        </label>
        <div class="col-lg-9 col-xl-9">
          {% include 'admin/contents/partials/input.twig' with { 'type':
          settings.type_name.type, 'name': 'type_name', 'value':
          content.type_name} %}
        </div>
      </div>
      {% endif %}
      <div class="form-group row">
        <div class="col-lg-9 col-xl-9 offset-xl-3">
          <h3 class="font-size-h6 mb-2 mt-4">Colores :</h3>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-xl-3 col-lg-3"></label>
        <div class="col-xl-9 col-lg-9">
          <div
            id="kt_repeater_color_{{ content.id }}"
            class="row repeater_color"
          >
            <div class="col-xl-12">
              <div data-repeater-list="colors">
                {% if content.colors|length > 0 %} {% for item in content.colors
                %} {% include 'admin/contents/partials/colors.twig' with {
                'item': item } %} {% endfor %} {% else %} {% include
                'admin/contents/partials/colors.twig' with { 'item': null } %}
                {% endif %}
              </div>
            </div>
            <div class="col-xl-12">
              <div class="text-right mt-4">
                <a
                  href="javascript:;"
                  data-repeater-create=""
                  class="btn btn-sm font-weight-bolder btn-light-primary"
                >
                  <i class="la la-plus"></i>Agregar</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-lg-9 col-xl-9 offset-xl-3">
          <h3 class="font-size-h6 mb-5">Imágenes :</h3>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-xl-3 col-lg-3"></label>
        <div class="col-xl-9 col-lg-9">
          <div
            id="kt_repeater_image_{{ content.id }}"
            class="row repeater_image"
          >
            <div class="col-xl-12">
              <div data-repeater-list="images" class="row">
                {% if content.images|length > 0 %} {% for item in content.images
                %} {% include 'admin/contents/partials/images.twig' with {
                'item': item } %} {% endfor %} {% else %} {% include
                'admin/contents/partials/images.twig' with { 'item': null } %}
                {% endif %}
              </div>
            </div>
            <div class="col-xl-12">
              <div class="text-right mt-2">
                <a
                  href="javascript:;"
                  data-repeater-create=""
                  class="btn btn-sm font-weight-bolder btn-light-primary"
                >
                  <i class="la la-plus"></i>Agregar</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="separator separator-dashed mt-8 mb-8"></div>
      <div class="row">
        <div class="col-lg-12 text-right">
          <button type="submit" class="btn btn-primary font-weight-bold">
            Guardar
          </button>
        </div>
      </div>
    </div>
  </div>
</form>
