<form class="form" id="form_data_section" @submit="onFormData">
    <input type="hidden" name="id" :value="product.id"/>
    <div class="row justify-content-center">
        <div class="col-xl-9">
            <div class="my-5 step">
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Acciones</label>
                    <div class="col-lg-9 col-xl-9">
                        <div class="checkbox-inline mt-3">
                            <label class="checkbox">
                                <input type="checkbox" name="status" value="1" :checked="product.status == 1 ? true : (product.status == 0 ? false : true)"/>
                                <span></span>
                                Activar
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-9 col-xl-9 offset-xl-3">
                        <h3 class="font-size-h6 mb-5">Datos Generales :</h3>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Nombre</label>
                    <div class="col-lg-9 col-xl-9">
                        <input class="form-control form-control-lg form-control-solid" type="text" name="name" v-model="product.name" required/>
                        <input class="d-none" type="text" name="type_id" v-model="type_id" required/>
                    </div>
                </div>
                {# <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Subtitulo</label>
                    <div class="col-lg-9 col-xl-9">
                        <input class="form-control form-control-lg form-control-solid" type="text" name="caption" :value="product.caption" />
                    </div>
                </div> #}
                {# <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Precio</label>
                    <div class="col-lg-9 col-xl-9">
                        <input class="form-control form-control-lg form-control-solid" type="text" name="price" v-model="product.price" :value="product.price" />
                    </div>
                </div>#}
                    <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Categoría</label>
                    {# <div class="col-lg-9 col-xl-9">
                        <select class="form-control form-control-solid" name="category_id" :value="product.category_id">
                            <option v-for="item in categories" :key="item.id" v-text="item.name" :value="item.id"></option>
                        </select>
                    </div> #}
                    <div class="col-lg-9 col-xl-9">
                         <input type="hidden" name="category_id" v-model="category_selected.id" />
                        <div class="dropdown">
                            <a class="btn btn-secondary btn-block dropdown-toggle d-flex" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:#F3F6F9;border-color:#F3F6F9;text-align:left;">
                                <template v-if="category_selected.id > 0">
                                    <div class="item-color" :style="{'background-color': category_selected.color}"></div>
                                    <div class="ml-4 float-left" v-text="category_selected.name"></div>
                                </template>
                                <template v-else>
                                    <span v-text="category_selected.name"></span>
                                </template>
                            </a>
                            <div class="dropdown-menu w-100" aria-labelledby="dropdownMenu2">
                                <template v-for="(item, index) in categories" >
                                    <div class="dropdown-item" @click="onCategory(item)">
                                        <div class="item-color" :style="{'background-color': (item.color ? item.color : 'transparent')}"></div><span class="ml-4 float-left" v-text="item.name"></span>
                                    </div>
                                </template>
                            </div>
                        </div>
                    </div>
                </div>
                {# <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Docente</label>
                    <div class="col-lg-9 col-xl-9">
                        <select class="form-control form-control-solid" name="teacher_id" v-model="product.teacher_id" :value="product.teacher_id" required>
                            <option v-for="item in teachers" :key="item.id" v-text="item.name + ' ' + item.lastname" :value="item.id"></option>
                        </select>
                    </div>
                </div> #}
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Menu</label>
                    <div class="col-lg-9 col-xl-9">
                        <select class="form-control selectpicker mb-5" title="Seleccionar" name="menus[]" multiple="multiple">
                            <option v-for="(item, index) in menus"  :key="item.id" :value="item.id" v-text="item.name"></option>
                        </select>
                    </div>
                </div>
                {% if rsp.data.type_id == 1 or rsp.data.product.type_id == 1 %}
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Url de presentación</label>
                    <div class="col-lg-9 col-xl-9">
                        <input class="form-control form-control-lg form-control-solid" type="text" name="url" v-model="product.url" />
                    </div>
                </div>
                {% endif %}
                {# <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Descripción</label>
                    <div class="col-lg-9 col-xl-9">
                        <div class="input-group input-group-lg input-group-solid">
                            <textarea class="form-group-solid summernote" name="description" v-html="product.description"></textarea>
                        </div>
                    </div>
                </div> #}
                {% if rsp.data.type_id == 1 or rsp.data.product.type_id == 1 %}
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Fecha</label>
                    <div class="col-lg-9 col-xl-9">
                        <input class="form-control form-control-lg form-control-solid" type="date" name="date" v-model="product.date" />
                    </div>
                </div>
                {% endif %}
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Autor</label>
                      <div class="col-lg-9 col-xl-9">
                        <select class="form-control form-control-solid" name="teacher_id" v-model="product.teacher_id" :value="product.teacher_id">
                            <option v-for="item in teachers" :key="item.id" v-text="item.name + ' ' + item.lastname" :value="item.id"></option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Descripción</label>
                    <div class="col-lg-9 col-xl-9">
                        <div class="input-group input-group-lg input-group-solid">
                            <textarea class="form-group-solid summernote" name="overview" v-html="product.overview"></textarea>
                        </div>
                    </div>
                </div>
                {% if rsp.data.type_id == 1 or rsp.data.product.type_id == 1 %}
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Imagen</label>
                    <div class="col-lg-9 col-xl-9">
                        <div class="image-input image-input-outline" id="kt_image_1">
                            <div class="image-input-wrapper" style="background-image: url('{{ data.product.image ? data.product.image : notfound }}'); background-repeat: no-repeat; background-size: 100% 100%;"></div>
                            <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="change" data-toggle="tooltip" title="" data-original-title="Cambiar image">
                                <i class="fa fa-pen icon-sm text-muted"></i>
                                <input type="file" name="image" accept=".png, .jpg, .jpeg" />
                                <input type="hidden" name="image_remove" />
                            </label>
                            <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="Cancel avatar">
                                <i class="ki ki-bold-close icon-xs text-muted"></i>
                            </span>
                        </div>
                    </div>
                </div>
                {% endif %}
                {% if rsp.data.type_id == 2 or rsp.data.product.type_id == 2 %}
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Archivo</label>
                    <div class="col-lg-9 col-xl-9">
                        <div class="custom-file">
                            <input id="customFile" type="file" name="image" accept=".mp3" class="custom-file-input form-control  form-control-solid">
                            <label for="customFile" class="custom-file-label">Seleccionar</label>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
            <div class="separator separator-dashed mt-10 mb-5"></div>
            <div class="form-group row">
                <div class="col-lg-12 text-right">
                    <button type="submit" class="btn btn-primary font-weight-bold">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</form>