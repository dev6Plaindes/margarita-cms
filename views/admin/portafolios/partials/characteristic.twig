<div class="row justify-content-center">
    <div class="col-xl-9">
        <div class="my-5 step">
            <div class="row">
                <div class="col-xl-12 form-group ">
                    <div class="float-left">
                        <h4 class="card-label">Gestionar</h4>
                    </div>
                    <div class="float-right">
                        <button type="button" class="btn btn-sm btn-light-primary" @click="onModalCharacteristic(-1)"> <i class="fas fa-plus"></i> Nuevo</button>
                    </div>
                </div>
                <div class="col-xl-12 form-group ">
                    <div class="table-responsive">
                        <table class="table table-hover" with="100%">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th class="text-center">Diseño</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for index, item in data.characteristics %}
                                <tr>
                                    <td>{{ item.name }}</td>
                                    <td>{{ item.description }}</td>
                                    <td class="text-center">
                                        <div style="background-color:{{ item.design_icon.color }};" class="fonticon">
                                            <i class="{{ item.design_icon.icon }}"></i>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <a href="javascript:;"class="btn btn-sm btn-clean btn-icon" @click="onModalCharacteristic({{ index }})" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="javascript:;" class="btn btn-sm btn-clean btn-icon"  @click="onDeleteCharacteristic({{ item.id }})" title="Eliminar">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalCharacteristic" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">GESTIONAR CARACTERÍSTICAS</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <form class="form" id="form_characteristic" @submit="onFormcharacteristic">
                    <div class="col-lg-12">
                        <input type="hidden" :value="characteristic.id" name="id">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input type="text" class="form-control form-control-solid" :value="characteristic.name" name="name" placeholder="" autocomplete="off" required/>
                        </div>
                        <div class="form-group">
                            <label>Descripción</label>
                            <input type="text" class="form-control form-control-solid" :value="characteristic.description" name="description" placeholder="" autocomplete="off" required/>
                        </div>
                        <div class="form-group">
                            <label>Icono</label>
                            <select class="form-control mb-5" title="Seleccionar" name="design_icon_id" :value="characteristic.design_icon_id">
                                <option v-for="(item, index) in designs_icons"  :key="item.id" :value="item.id" v-text="item.name"></option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary font-weight-bold" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary font-weight-bold" form="form_characteristic">Guardar</button>
            </div>
        </div>
    </div>
</div>