<div style="background-color:#f4f4f4; margin:0px; padding:30px;">
	<div style="width:600px !important;background-color: #fff !important;margin: auto !important; border:1px solid #f4f4f4;font-weight:400;color:#000;">
		{% set company_logo = company.logos|first %}
		{% set company_color = company.colors|first %}
		<table border="0" cellpadding="0" cellspacing="0" width="100%">
			<tbody>
				<tr>
					<td>
						<div style="text-align: center;padding-top:5px; padding-bottom:5px;">
							{% if company_logo %}
								<img src="https://{{ company.url_codigo }}/{{ company_logo.logo }}" />
							{% endif %}
						</div>            
					</td>
				</tr>
				<tr>
					<td>
						<div style="    
							padding: 1px;
							text-align: center;
							color: #fff;
							background-color: {{ company_color ? company_color.color : '#d9edf7' }};
							font-weight:700;
							font-size: 20px;">
							<p><strong>NOTIFICACIÓN DE TRANSACCIÓN</strong></p>
						</div>            
					</td>
				</tr>
				<tr>
					<td>
						<div style="padding:15px 30px; text-align:center; font-size: 14px;">
							<p>Estimado: <b>{{ name }}</b></p>
						</div>
					</td>
				</tr>
				<tr>
					<td>
						<div style="padding:0px 30px; text-align:center; font-size: 14px;">
							<table>
								<tbody>
									{% if comment %}
										<tr>
											<td colspan="2" style="padding:0px 0px 10px 0px; text-align:center; word-break: break-word;">{{ comment }}</td>
										</tr>
									{% endif %}
								</tbody>
							</table>
						</div>
						<br/>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
